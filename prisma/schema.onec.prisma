// ==========================
// 1C Integration models
// ==========================

enum OrderStatus {
  DRAFT
  QUEUED
  SENT_TO_1C
  CONFIRMED
  PARTIAL
  REJECTED
  CANCELLED
}

model Counterparty {
  id          String   @id @default(cuid())
  guid        String   @unique
  name        String
  fullName    String?
  inn         String?
  kpp         String?
  phone       String?
  email       String?
  isActive    Boolean  @default(true)

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  contracts     ClientContract[]
  agreements    ClientAgreement[]
  addresses     DeliveryAddress[]
  specialPrices SpecialPrice[]
  orders        Order[]
  clientProfiles ClientProfile[] @relation("ClientProfileCounterparty")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@index([sourceUpdatedAt])
}

model DeliveryAddress {
  id             String   @id @default(cuid())
  guid           String?  @unique
  counterpartyId String

  name           String?
  fullAddress    String
  city           String?
  street         String?
  house          String?
  building       String?
  apartment      String?
  postcode       String?

  isDefault      Boolean  @default(false)
  isActive       Boolean  @default(true)

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  counterparty   Counterparty @relation(fields: [counterpartyId], references: [id])
  orders         Order[]
  activeForProfiles ClientProfile[] @relation("ClientProfileActiveDeliveryAddress")

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([counterpartyId])
  @@index([isActive])
  @@index([sourceUpdatedAt])
}

model ProductGroup {
  id        String   @id @default(cuid())
  guid      String   @unique
  name      String
  code      String?
  isActive  Boolean  @default(true)

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  parentId  String?
  parent    ProductGroup? @relation("ProductGroupHierarchy", fields: [parentId], references: [id])
  children  ProductGroup[] @relation("ProductGroupHierarchy")

  products  Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parentId])
  @@index([isActive])
  @@index([sourceUpdatedAt])
}

model Unit {
  id       String   @id @default(cuid())
  guid     String?  @unique
  name     String
  code     String?
  symbol   String?

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  products Product[]       @relation("Product_baseUnit")
  packages ProductPackage[]
  orderItems OrderItem[]   @relation("OrderItem_unit")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sourceUpdatedAt])
}

model Product {
  id           String   @id @default(cuid())
  guid         String   @unique
  name         String
  code         String?
  article      String?
  sku          String?
  groupId      String?
  isWeight     Boolean  @default(false)
  isService    Boolean  @default(false)
  isActive     Boolean  @default(true)

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  group        ProductGroup? @relation(fields: [groupId], references: [id])

  baseUnitId   String?
  baseUnit     Unit?    @relation("Product_baseUnit", fields: [baseUnitId], references: [id])

  packages     ProductPackage[]
  stocks       StockBalance[]
  prices       ProductPrice[]
  specialPrices SpecialPrice[]
  orderItems   OrderItem[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([groupId])
  @@index([isActive])
  @@index([sourceUpdatedAt])
  @@index([sku])
  @@index([article])
}

model ProductPackage {
  id         String   @id @default(cuid())
  guid       String?  @unique
  productId  String
  unitId     String
  name       String
  multiplier Decimal   @db.Decimal(18, 4)
  barcode    String?
  isDefault  Boolean   @default(false)
  sortOrder  Int       @default(0)

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  product    Product @relation(fields: [productId], references: [id])
  unit       Unit    @relation(fields: [unitId], references: [id])

  orderItems OrderItem[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
  @@index([barcode])
  @@index([sourceUpdatedAt])
}

model Warehouse {
  id        String   @id @default(cuid())
  guid      String   @unique
  name      String
  code      String?
  isActive  Boolean  @default(true)
  isDefault Boolean  @default(false)
  isPickup  Boolean  @default(false)
  address   String?

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  stocks    StockBalance[]
  agreements ClientAgreement[]
  orders    Order[]
  activeForProfiles ClientProfile[] @relation("ClientProfileActiveWarehouse")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([isDefault])
  @@index([sourceUpdatedAt])
}

model StockBalance {
  id          String   @id @default(cuid())
  productId   String
  warehouseId String
  quantity    Decimal  @db.Decimal(18, 3)
  reserved    Decimal? @db.Decimal(18, 3)
  updatedAt   DateTime

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  product     Product   @relation(fields: [productId], references: [id])
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])

  @@unique([productId, warehouseId])
  @@index([warehouseId])
  @@index([updatedAt])
  @@index([sourceUpdatedAt])
}

model ClientContract {
  id             String   @id @default(cuid())
  guid           String   @unique
  counterpartyId String
  number         String
  date           DateTime
  validFrom      DateTime?
  validTo        DateTime?
  isActive       Boolean  @default(true)
  comment        String?

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  counterparty   Counterparty   @relation(fields: [counterpartyId], references: [id])
  agreements     ClientAgreement[]
  orders         Order[]
  activeForProfiles ClientProfile[] @relation("ClientProfileActiveContract")

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([counterpartyId])
  @@index([isActive])
  @@index([sourceUpdatedAt])
}

model PriceType {
  id           String   @id @default(cuid())
  guid         String   @unique
  name         String
  code         String?
  isActive     Boolean  @default(true)

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  agreements    ClientAgreement[]
  productPrices ProductPrice[]
  specialPrices SpecialPrice[]
  activeForProfiles ClientProfile[] @relation("ClientProfileActivePriceType")

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([isActive])
  @@index([sourceUpdatedAt])
}

model ClientAgreement {
  id              String   @id @default(cuid())
  guid            String   @unique
  name            String
  counterpartyId  String?
  contractId      String?
  priceTypeId     String?
  warehouseId     String?
  currency        String?

  isActive        Boolean  @default(true)

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  counterparty    Counterparty?   @relation(fields: [counterpartyId], references: [id])
  contract        ClientContract? @relation(fields: [contractId], references: [id])
  warehouse       Warehouse?      @relation(fields: [warehouseId], references: [id])
  priceType       PriceType?      @relation(fields: [priceTypeId], references: [id])

  specialPrices   SpecialPrice[]
  orders          Order[]
  activeForProfiles ClientProfile[] @relation("ClientProfileActiveAgreement")

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([counterpartyId])
  @@index([contractId])
  @@index([warehouseId])
  @@index([priceTypeId])
  @@index([isActive])
  @@index([sourceUpdatedAt])
}

model ProductPrice {
  id          String   @id @default(cuid())
  guid        String?  @unique
  productId   String
  priceTypeId String?

  price       Decimal  @db.Decimal(18, 4)
  currency    String?
  startDate   DateTime?
  endDate     DateTime?
  minQty      Decimal? @db.Decimal(18, 3)
  isActive    Boolean  @default(true)

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  product     Product   @relation(fields: [productId], references: [id])
  priceType   PriceType? @relation(fields: [priceTypeId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([priceTypeId])
  @@index([isActive])
  @@index([sourceUpdatedAt])
  @@unique([productId, priceTypeId, startDate])
}

model SpecialPrice {
  id              String   @id @default(cuid())
  guid            String?  @unique

  productId       String
  counterpartyId  String?
  agreementId     String?
  priceTypeId     String?

  price           Decimal  @db.Decimal(18, 4)
  currency        String?
  startDate       DateTime?
  endDate         DateTime?
  minQty          Decimal? @db.Decimal(18, 3)
  isActive        Boolean  @default(true)

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  product         Product        @relation(fields: [productId], references: [id])
  counterparty    Counterparty?  @relation(fields: [counterpartyId], references: [id])
  agreement       ClientAgreement? @relation(fields: [agreementId], references: [id])
  priceType       PriceType?     @relation(fields: [priceTypeId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([productId])
  @@index([productId, counterpartyId])
  @@index([productId, agreementId])
  @@index([productId, priceTypeId])
  @@index([isActive])
  @@index([sourceUpdatedAt])
  @@unique([productId, counterpartyId, agreementId, priceTypeId, startDate])
}

model Order {
  id                String       @id @default(cuid())
  guid              String?      @unique
  number1c          String?
  date1c            DateTime?

  counterpartyId    String
  agreementId       String?
  contractId        String?
  warehouseId       String?
  deliveryAddressId String?

  status            OrderStatus @default(DRAFT)
  comment           String?
  deliveryDate      DateTime?
  totalAmount       Decimal?    @db.Decimal(18, 2)
  currency          String?

  queuedAt          DateTime?
  sentTo1cAt        DateTime?
  lastStatusSyncAt  DateTime?
  exportAttempts    Int        @default(0)
  lastExportError   String?

  sourceUpdatedAt   DateTime?
  lastSyncedAt      DateTime?

  counterparty      Counterparty    @relation(fields: [counterpartyId], references: [id])
  agreement         ClientAgreement? @relation(fields: [agreementId], references: [id])
  contract          ClientContract? @relation(fields: [contractId], references: [id])
  warehouse         Warehouse?      @relation(fields: [warehouseId], references: [id])
  deliveryAddress   DeliveryAddress? @relation(fields: [deliveryAddressId], references: [id])

  items             OrderItem[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([counterpartyId])
  @@index([agreementId])
  @@index([contractId])
  @@index([warehouseId])
  @@index([status])
  @@index([queuedAt])
  @@index([sentTo1cAt])
  @@index([sourceUpdatedAt])
}

model OrderItem {
  id              String   @id @default(cuid())
  orderId         String
  productId       String
  packageId       String?
  unitId          String?

  quantity        Decimal  @db.Decimal(18, 3)
  quantityBase    Decimal? @db.Decimal(18, 3)
  price           Decimal  @db.Decimal(18, 4)
  discountPercent Decimal? @db.Decimal(5, 2)
  lineAmount      Decimal? @db.Decimal(18, 2)
  comment         String?

  sourceUpdatedAt DateTime?
  lastSyncedAt    DateTime?

  order           Order          @relation(fields: [orderId], references: [id])
  product         Product        @relation(fields: [productId], references: [id])
  package         ProductPackage? @relation(fields: [packageId], references: [id])
  unit            Unit?          @relation("OrderItem_unit", fields: [unitId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
  @@index([sourceUpdatedAt])
}
