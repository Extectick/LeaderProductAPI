generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

enum ProfileStatus {
  PENDING
  ACTIVE
  BLOCKED
}

/*
 * Новые enum'ы для обращений
 */
enum AppealStatus {
  OPEN
  IN_PROGRESS
  COMPLETED
  DECLINED
  RESOLVED
}

enum AppealPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AttachmentType {
  IMAGE
  AUDIO
  FILE
}

enum RouteStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum RouteEventType {
  MOVE
  STOP
}

model ClientProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  addressId Int?
  address   Address? @relation(fields: [addressId], references: [id])
  phone     String?
  status    ProfileStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SupplierProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  addressId Int?
  address   Address? @relation(fields: [addressId], references: [id])
  phone     String?
  status    ProfileStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmployeeProfile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  departmentId Int?
  department Department? @relation(fields: [departmentId], references: [id])
  departmentRoles DepartmentRole[] @relation("EmployeeDepartmentRoles")
  phone     String?
  status    ProfileStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Department {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  departmentRoles DepartmentRole[]
  employeeProfiles EmployeeProfile[]  // Добавлено обратное отношение

  // Новые связи с обращениями
  appealsFrom   Appeal[] @relation("AppealsFrom")
  appealsTo     Appeal[] @relation("AppealsTo")
}

enum ProfileType {
  CLIENT
  SUPPLIER
  EMPLOYEE
}

model User {
  id                 Int                 @id @default(autoincrement())
  email              String              @unique
  passwordHash       String
  isActive           Boolean             @default(false)
  roleId             Int 
  firstName          String?             // Имя
  lastName           String?             // Фамилия
  middleName         String?             // Отчество
  phone              String?             // Телефон пользователя
  avatarUrl          String?             // Ссылка на аватар пользователя
  deletedAt          DateTime?           // Для soft delete
  currentProfileType ProfileType?        // Текущий активный профиль
  emailVerifications EmailVerification[]
  loginAttempts      LoginAttempt[]
  passwordResets     PasswordReset[]
  refreshTokens      RefreshToken[]
  role               Role                @relation(fields: [roleId], references: [id])
  departmentRoles    DepartmentRole[]
  auditLogs          AuditLog[]          @relation("UserAuditLogs")
  clientProfile      ClientProfile?
  supplierProfile    SupplierProfile?
  employeeProfile    EmployeeProfile?
  profileStatus      ProfileStatus       @default(PENDING)
  qrlist             QRList[]
  routes             UserRoute[]
  routePoints        RoutePoint[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  /*
   * Новые связи с обращениями
   */
  appealsCreated    Appeal[]            @relation("AppealsCreated")
  appealAssignees   AppealAssignee[]
  appealWatchers    AppealWatcher[]
  appealMessages    AppealMessage[]
  appealStatusHistory AppealStatusHistory[]
  deviceTokens      DeviceToken[]
  appealMessageReads AppealMessageRead[]

  @@index([email])
}

model DepartmentRole {
  id           Int       @id @default(autoincrement())
  userId       Int
  roleId       Int
  departmentId Int

  user       User       @relation(fields: [userId], references: [id])
  role       Role       @relation(fields: [roleId], references: [id])
  department Department @relation(fields: [departmentId], references: [id])

  employeeProfiles EmployeeProfile[] @relation("EmployeeDepartmentRoles") // Добавлено обратное отношение

  @@unique([userId, roleId, departmentId])
}

model Address {
  id        Int      @id @default(autoincrement())
  street    String
  city      String
  state     String?
  postalCode String?
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clientProfiles   ClientProfile[]
  supplierProfiles SupplierProfile[]
}

model Role {
  id            Int               @id @default(autoincrement())
  name          String            @unique
  permissions   RolePermissions[] @relation("RolePermissions")
  users         User[]
  departmentRoles DepartmentRole[]

  parentRoleId  Int?              // Родительская роль для иерархии ролей
  parentRole    Role?             @relation("RoleHierarchy", fields: [parentRoleId], references: [id])
  childRoles    Role[]            @relation("RoleHierarchy")
}

model Permission {
  id    Int               @id @default(autoincrement())
  name  String            @unique
  roles RolePermissions[] @relation("RolePermissions")
}

model RolePermissions {
  roleId       Int
  permissionId Int
  permission   Permission @relation("RolePermissions", fields: [permissionId], references: [id])
  role         Role       @relation("RolePermissions", fields: [roleId], references: [id])

  @@id([roleId, permissionId])
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
}

model LoginAttempt {
  id        Int      @id @default(autoincrement())
  userId    Int
  success   Boolean
  ip        String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model EmailVerification {
  id           Int      @id @default(autoincrement())
  userId       Int
  code         String
  expiresAt    DateTime
  used         Boolean  @default(false)
  attemptsCount Int      @default(0)
  lastSentAt   DateTime?
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum ActionType {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  PASSWORD_RESET
  EMAIL_VERIFICATION
  OTHER
}

model AuditLog {
  id         Int        @id @default(autoincrement())
  userId     Int?
  action     ActionType
  targetType String?
  targetId   Int?
  timestamp  DateTime   @default(now())
  details    String?

  user       User?      @relation("UserAuditLogs", fields: [userId], references: [id])
}

model UserRoute {
  id        Int          @id @default(autoincrement())
  userId    Int
  user      User         @relation(fields: [userId], references: [id])
  status    RouteStatus  @default(ACTIVE)
  startedAt DateTime     @default(now())
  endedAt   DateTime?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  points    RoutePoint[]

  @@index([userId, startedAt])
}

model RoutePoint {
  id                  Int             @id @default(autoincrement())
  routeId             Int
  route               UserRoute       @relation(fields: [routeId], references: [id])
  userId              Int
  user                User            @relation(fields: [userId], references: [id])
  latitude            Float
  longitude           Float
  recordedAt          DateTime
  eventType           RouteEventType  @default(MOVE)
  accuracy            Float?
  speed               Float?
  heading             Float?
  stayDurationSeconds Int?
  sequence            Int?
  createdAt           DateTime        @default(now())

  @@index([userId, recordedAt])
  @@index([routeId, recordedAt])
}

enum QRStatus {
  ACTIVE
  PAUSED
  DELETED
}

enum QRType {
  PHONE
  LINK
  EMAIL
  TEXT
  WHATSAPP
  CONTACT
  TELEGRAM
}

model QRList {
  id          String      @id
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  status      QRStatus    @default(ACTIVE)
  createdBy   User        @relation(fields: [createdById], references: [id])
  createdById Int
  qrData      String
  qrType      QRType      @default(TEXT)
  description String?
  analytics   QRAnalytic[]
}

model QRAnalytic {
  id           Int       @id @default(autoincrement())
  ip           String?
  location     String?
  browser      String?
  device       String?
  scanDuration Int?      // Время в миллисекундах
  createdAt    DateTime  @default(now())
  qrList       QRList    @relation(fields: [qrListId], references: [id])
  qrListId     String
}

/*
 * Новые модели для системы обращений
 */
model Appeal {
  id               Int            @id @default(autoincrement())
  number           Int            @unique
  fromDepartmentId Int?
  toDepartmentId   Int
  createdById      Int
  status           AppealStatus   @default(OPEN)
  priority         AppealPriority @default(MEDIUM)
  deadline         DateTime?
  title            String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  fromDepartment   Department?    @relation("AppealsFrom", fields: [fromDepartmentId], references: [id])
  toDepartment     Department     @relation("AppealsTo", fields: [toDepartmentId], references: [id])
  createdBy        User           @relation("AppealsCreated", fields: [createdById], references: [id])
  assignees        AppealAssignee[]
  watchers         AppealWatcher[]
  messages         AppealMessage[]
  statusHistory    AppealStatusHistory[]
}

model AppealAssignee {
  id       Int   @id @default(autoincrement())
  appealId Int
  userId   Int

  appeal   Appeal @relation(fields: [appealId], references: [id])
  user     User   @relation(fields: [userId], references: [id])

  @@unique([appealId, userId])
}

model AppealWatcher {
  id       Int   @id @default(autoincrement())
  appealId Int
  userId   Int

  appeal   Appeal @relation(fields: [appealId], references: [id])
  user     User   @relation(fields: [userId], references: [id])

  @@unique([appealId, userId])
}

model AppealStatusHistory {
  id         Int          @id @default(autoincrement())
  appealId   Int
  oldStatus  AppealStatus
  newStatus  AppealStatus
  changedById Int
  changedAt  DateTime      @default(now())

  appeal     Appeal        @relation(fields: [appealId], references: [id])
  changedBy  User          @relation(fields: [changedById], references: [id])
}

model AppealMessage {
  id        Int      @id @default(autoincrement())
  appealId  Int
  senderId  Int
  text      String?
  editedAt  DateTime?
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())

  appeal    Appeal   @relation(fields: [appealId], references: [id])
  sender    User     @relation(fields: [senderId], references: [id])
  attachments AppealAttachment[]
  reads     AppealMessageRead[]
}

model AppealAttachment {
  id         Int           @id @default(autoincrement())
  messageId  Int
  fileUrl    String
  fileName   String
  fileType   AttachmentType
  createdAt  DateTime       @default(now())

  message    AppealMessage  @relation(fields: [messageId], references: [id])
}

model AppealMessageRead {
  id        Int            @id @default(autoincrement())
  message   AppealMessage  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId Int
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  readAt    DateTime       @default(now())

  @@unique([messageId, userId])
}

model DeviceToken {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  token     String   @unique
  platform  String?
  createdAt DateTime @default(now())
}

// ==========================
// 1C Integration models
// ==========================

enum OrderStatus {
  DRAFT
  QUEUED
  SENT_TO_1C
  CONFIRMED
  PARTIAL
  REJECTED
  CANCELLED
}

model Counterparty {
  id          String   @id @default(cuid())
  guid        String   @unique
  name        String
  fullName    String?
  inn         String?
  kpp         String?
  phone       String?
  email       String?
  isActive    Boolean  @default(true)

  contracts     ClientContract[]
  agreements    ClientAgreement[]
  addresses     DeliveryAddress[]
  specialPrices SpecialPrice[]
  orders        Order[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DeliveryAddress {
  id             String   @id @default(cuid())
  guid           String?  @unique
  counterpartyId String

  name           String?
  fullAddress    String
  city           String?
  street         String?
  house          String?
  building       String?
  apartment      String?
  postcode       String?

  isDefault      Boolean  @default(false)
  isActive       Boolean  @default(true)

  counterparty   Counterparty @relation(fields: [counterpartyId], references: [id])
  orders         Order[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ProductGroup {
  id        String   @id @default(cuid())
  guid      String   @unique
  name      String
  code      String?
  isActive  Boolean  @default(true)

  parentId  String?
  parent    ProductGroup? @relation("ProductGroupHierarchy", fields: [parentId], references: [id])
  children  ProductGroup[] @relation("ProductGroupHierarchy")

  products  Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Unit {
  id       String   @id @default(cuid())
  guid     String?  @unique
  name     String
  code     String?
  symbol   String?

  products Product[]       @relation("Product_baseUnit")
  packages ProductPackage[]
  orderItems OrderItem[]   @relation("OrderItem_unit")
}

model Product {
  id           String   @id @default(cuid())
  guid         String   @unique
  name         String
  code         String?
  article      String?
  sku          String?
  groupId      String?
  isWeight     Boolean  @default(false)
  isService    Boolean  @default(false)
  isActive     Boolean  @default(true)

  group        ProductGroup? @relation(fields: [groupId], references: [id])

  baseUnitId   String?
  baseUnit     Unit?    @relation("Product_baseUnit", fields: [baseUnitId], references: [id])

  packages     ProductPackage[]
  stocks       StockBalance[]
  specialPrices SpecialPrice[]
  orderItems   OrderItem[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([groupId])
}

model ProductPackage {
  id         String   @id @default(cuid())
  guid       String?  @unique
  productId  String
  unitId     String
  name       String
  multiplier Decimal   @db.Decimal(18, 4)
  barcode    String?
  isDefault  Boolean   @default(false)
  sortOrder  Int       @default(0)

  product    Product @relation(fields: [productId], references: [id])
  unit       Unit    @relation(fields: [unitId], references: [id])

  orderItems OrderItem[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
}

model Warehouse {
  id        String   @id @default(cuid())
  guid      String   @unique
  name      String
  code      String?
  isActive  Boolean  @default(true)
  isDefault Boolean  @default(false)
  isPickup  Boolean  @default(false)
  address   String?

  stocks    StockBalance[]
  agreements ClientAgreement[]
  orders    Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StockBalance {
  id          String   @id @default(cuid())
  productId   String
  warehouseId String
  quantity    Decimal  @db.Decimal(18, 3)
  reserved    Decimal? @db.Decimal(18, 3)
  updatedAt   DateTime

  product     Product   @relation(fields: [productId], references: [id])
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])

  @@unique([productId, warehouseId])
}

model ClientContract {
  id             String   @id @default(cuid())
  guid           String   @unique
  counterpartyId String
  number         String
  date           DateTime
  validFrom      DateTime?
  validTo        DateTime?
  isActive       Boolean  @default(true)
  comment        String?

  counterparty   Counterparty   @relation(fields: [counterpartyId], references: [id])
  agreements     ClientAgreement[]
  orders         Order[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([counterpartyId])
}

model PriceType {
  id           String   @id @default(cuid())
  guid         String   @unique
  name         String
  code         String?
  isActive     Boolean  @default(true)

  agreements    ClientAgreement[]
  specialPrices SpecialPrice[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ClientAgreement {
  id              String   @id @default(cuid())
  guid            String   @unique
  name            String
  counterpartyId  String?
  contractId      String?
  priceTypeId     String?
  warehouseId     String?
  currency        String?

  isActive        Boolean  @default(true)

  counterparty    Counterparty?   @relation(fields: [counterpartyId], references: [id])
  contract        ClientContract? @relation(fields: [contractId], references: [id])
  warehouse       Warehouse?      @relation(fields: [warehouseId], references: [id])
  priceType       PriceType?      @relation(fields: [priceTypeId], references: [id])

  specialPrices   SpecialPrice[]
  orders          Order[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([counterpartyId])
  @@index([contractId])
  @@index([warehouseId])
  @@index([priceTypeId])
}

model SpecialPrice {
  id              String   @id @default(cuid())
  guid            String?  @unique

  productId       String
  counterpartyId  String?
  agreementId     String?
  priceTypeId     String?

  price           Decimal  @db.Decimal(18, 4)
  currency        String?
  startDate       DateTime?
  endDate         DateTime?
  minQty          Decimal? @db.Decimal(18, 3)
  isActive        Boolean  @default(true)

  product         Product        @relation(fields: [productId], references: [id])
  counterparty    Counterparty?  @relation(fields: [counterpartyId], references: [id])
  agreement       ClientAgreement? @relation(fields: [agreementId], references: [id])
  priceType       PriceType?     @relation(fields: [priceTypeId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([productId])
  @@index([productId, counterpartyId])
  @@index([productId, agreementId])
  @@index([productId, priceTypeId])
  @@unique([productId, counterpartyId, agreementId, priceTypeId, startDate])
}

model Order {
  id                String       @id @default(cuid())
  guid              String?      @unique
  number1c          String?
  date1c            DateTime?

  counterpartyId    String
  agreementId       String?
  contractId        String?
  warehouseId       String?
  deliveryAddressId String?

  status            OrderStatus @default(DRAFT)
  comment           String?
  deliveryDate      DateTime?
  totalAmount       Decimal?    @db.Decimal(18, 2)
  currency          String?

  counterparty      Counterparty    @relation(fields: [counterpartyId], references: [id])
  agreement         ClientAgreement? @relation(fields: [agreementId], references: [id])
  contract          ClientContract? @relation(fields: [contractId], references: [id])
  warehouse         Warehouse?      @relation(fields: [warehouseId], references: [id])
  deliveryAddress   DeliveryAddress? @relation(fields: [deliveryAddressId], references: [id])

  items             OrderItem[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([counterpartyId])
  @@index([agreementId])
  @@index([contractId])
  @@index([warehouseId])
}

model OrderItem {
  id              String   @id @default(cuid())
  orderId         String
  productId       String
  packageId       String?
  unitId          String?

  quantity        Decimal  @db.Decimal(18, 3)
  quantityBase    Decimal? @db.Decimal(18, 3)
  price           Decimal  @db.Decimal(18, 4)
  discountPercent Decimal? @db.Decimal(5, 2)
  lineAmount      Decimal? @db.Decimal(18, 2)
  comment         String?

  order           Order          @relation(fields: [orderId], references: [id])
  product         Product        @relation(fields: [productId], references: [id])
  package         ProductPackage? @relation(fields: [packageId], references: [id])
  unit            Unit?          @relation("OrderItem_unit", fields: [unitId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
}
